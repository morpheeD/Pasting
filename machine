---
- name: Desactivate cloud init for rhel 8.10
  ansible.builtin.file:
    path: /etc/cloud/cloud-init.disabled
    state: touch
  when: (ansible_facts['distribution_major_version'] == "8" and ansible_facts['distribution_version'] == "8.10")

- name: Supprimer le fichier machine-id s'il existe
  ansible.builtin.file:
    path: /etc/machine-id
    state: absent
  become: true

- name: Générer un nouveau machine-id
  ansible.builtin.command:
    cmd: dbus-uuidgen --ensure=/etc/machine-id
  become: true

- name: Forcer le redémarrage de la machine avec async
  ansible.builtin.command:
    cmd: shutdown -r now "Redémarrage forcé par Ansible"
  async: 60
  poll: 0
  become: true
  ignore_errors: yes

- name: Attendre que la machine soit de retour en ligne
  ansible.builtin.wait_for_connection:
    connect_timeout: 60
    sleep: 5
    delay: 5
    timeout: 300
